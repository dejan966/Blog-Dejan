<div class="container">

      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Prijava</h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>
            <br/>

              <div class="field">
                <%= f.password_field :password, placeholder:"Geslo", autocomplete: "current-password", class:"form-control" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
              </div>
            <% end %>
              <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>

  </div>
