<div class="container">

      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Registracija</h5>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, placeholder:"Ime", autocomplete: "name", class:"form-control" %>
  </div>
<br />

  <div class="field">
    <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
<br/>

  <div class="field">
    <%= f.password_field :password, placeholder:"Geslo", autocomplete: "new-password", class:"form-control"  %>
  </div>
<br/>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:"Potrditev gesla", autocomplete: "new-password", class:"form-control" %>
  </div>
<br/>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
  </div>
<% end %>
              <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>

  </div>
