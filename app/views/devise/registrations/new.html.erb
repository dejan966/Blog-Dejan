<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, placeholder:"Ime", autocomplete: "name" %>
  </div>
<br />

  <div class="field">
    <%= f.email_field :email, placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>
<br/>

  <div class="field">
    <%= f.password_field :password, placeholder:"Geslo", autocomplete: "new-password"  %>
  </div>
<br/>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder:"Potrditev gesla", autocomplete: "new-password" %>
  </div>
<br/>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
